<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ma.carpooli.carpooli.ui.signup.AddProfilePictureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add your profile picture"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ShowImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textview"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="42dp" />

        <Button
            android:id="@+id/ButtonChooseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ShowImageView"
            android:text="Choose Image"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="259dp" />

        <Button
            android:id="@+id/ButtonUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ButtonChooseImage"
            android:text="Upload image to Firebase Storage"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="325dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
